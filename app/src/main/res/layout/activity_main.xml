<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#363636"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/logoos"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tv_digite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Digite seu CPF."
        android:textColor="#F5FFFA"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/et_cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        android:inputType="number"
        android:textColor="#F5FFFA"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/alertaCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campo ObrigatÃ³rio!"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/et_cpf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_ver"
        android:layout_width="250dp"
        android:layout_marginLeft="75dp"
        android:layout_height="wrap_content"
        android:background="#3CB371"
        android:text="Verificar"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/tv_ordem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="OrdemS"
        android:textColor="#F5FFFA"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_vec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="VEC Systems"
        android:textColor="#F5FFFA"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_versao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Versao 1.14.0"
        android:textColor="#F5FFFA"
        android:textSize="10sp"
        android:textStyle="bold"
        />



</LinearLayout>
